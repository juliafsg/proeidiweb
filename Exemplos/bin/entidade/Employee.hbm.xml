<?xml version="1.0"?>

<!--
    <!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping.dtd">
-->

<!DOCTYPE hibernate-mapping SYSTEM "./src/entidade/hibernate-mapping.dtd">
 
    <hibernate-mapping>
        <class name="entidade.Employee" table="employee">  
            <id name="ssn" column="ssn" type="string">  
                <generator class="assigned"/>  
            </id>
            <property name="fname" column="fname" type="string"/>  
            <property name="minit" column="minit" type="string"/>
            <property name="lname" column="lname" type="string"/>
            <property name="bdate" column="bdate" type="date"/>
            <property name="address" column="address" type="string"/>
            <property name="sex" column="sex" type="string"/>
            <property name="salary" column="salary" type="double"/>
            <property name="superssn" column="super_ssn" type="string"/>
            <property name="dno" column="dno" type="int"/> 
        </class>
    </hibernate-mapping>